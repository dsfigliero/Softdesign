@model Soft.Models.Models.Usuario

@{
    ViewBag.Title = "Login";
}

<h1 style="text-align: center">SoftDesign Livraria</h1>

@using (Html.BeginForm("Autenticar", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    if (@ViewBag.Message != null)
    {
    <div style="border: 1px solid red">
        @ViewBag.Message
    </div>
    }

    <table style="margin: auto; width: 10%; border: 3px solid lightgray; padding: 10px; text-align: center; border-radius: 5px">

        <tr>
            <td>@Html.LabelFor(a => a.Login)</td>
            <td>@Html.TextBoxFor(a => a.Login)</td>
            <td>@Html.ValidationMessageFor(a => a.Login)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(a => a.Senha)</td>
            <td>@Html.PasswordFor(a => a.Senha) </td>
            <td>@Html.ValidationMessageFor(a => a.Senha) </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Entrar" style="background-color: lightgreen" />
                <input type="submit" value="Registrar" />

            </td>
            <td></td>
            <td></td>
        </tr>

    </table>
    <h2 style="text-align: center">Bem-Vindo</h2>
    
}
@section Scripts
    {
    @Scripts.Render("~/bundles/jqueryval")
}
