@model Livro 
@{
    ViewBag.Title = "Inserir Livro";
}

<h2>Novo Livro</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    <fieldset>
        <legend>Livro</legend>
        <br />
        <br />

        <div class="editor-label">
            @Html.LabelFor(model => model.Titulo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Titulo)
            @Html.ValidationMessageFor(model => model.Titulo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Autor)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Autor)
            @Html.ValidationMessageFor(model => model.Autor)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Situacao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Situacao)
            @Html.ValidationMessageFor(model => model.Situacao)
            Disponível
        </div>

        <p>
            <input type="submit" value="Inserir" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar para a lista de livros", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
